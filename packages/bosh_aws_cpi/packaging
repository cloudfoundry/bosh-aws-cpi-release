#!/usr/bin/env sh

set -e -x

BOSH_PACKAGES_DIR=${BOSH_PACKAGES_DIR:-/var/vcap/packages}

cp -a bosh_aws_cpi/* ${BOSH_INSTALL_TARGET}

bundle_cmd="$BOSH_PACKAGES_DIR/ruby_aws_cpi/bin/bundle"

cd ${BOSH_INSTALL_TARGET}

$bundle_cmd install \
  --local           \
  --no-prune        \
  --deployment
