{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Template for creating BOSH AWS infrastructure for concourse ci.",
  "Mappings": {
    "IPConfigurations": {
      "VPC": {
        "CIDR": "10.0.0.0/16"
      },
      "UbuntuBATs": {
        "CIDR": "10.0.0.0/24",
        "ReservedRange": "10.0.0.2-10.0.0.9",
        "StaticRange": "10.0.0.10-10.0.0.30",
        "DirectorPrivate": "10.0.0.6",
        "Static1": "10.0.0.29",
        "Static2": "10.0.0.30",
        "Gateway": "10.0.0.1"
      },
      "CentosBATs": {
        "CIDR": "10.0.1.0/24",
        "ReservedRange": "10.0.1.2-10.0.1.9",
        "StaticRange": "10.0.1.10-10.0.1.30",
        "DirectorPrivate": "10.0.1.6",
        "Static1": "10.0.1.29",
        "Static2": "10.0.1.30",
        "Gateway": "10.0.1.1"
      },
      "Lifecycle": {
        "CIDR": "10.0.2.0/24",
        "ManualIP": "10.0.2.9"
      }
    }
  },
  "Resources": {
    "VPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": {
          "Fn::FindInMap": [
            "IPConfigurations",
            "VPC",
            "CIDR"
          ]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "bats"
          }
        ]
      }
    },
    "InternetGateway": {
      "Type": "AWS::EC2::InternetGateway",
      "Properties": {
        "Tags": [
          {
            "Key": "Name",
            "Value": "bats"
          }
        ]
      }
    },
    "AttachGateway": {
      "DependsOn": [
        "VPC",
        "InternetGateway"
      ],
      "Type": "AWS::EC2::VPCGatewayAttachment",
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "InternetGatewayId": {
          "Ref": "InternetGateway"
        }
      }
    },
    "RouteTable": {
      "DependsOn": [
        "VPC"
      ],
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "bats"
          }
        ]
      }
    },
    "Route": {
      "DependsOn": [
        "RouteTable",
        "AttachGateway"
      ],
      "Type": "AWS::EC2::Route",
      "Properties": {
        "RouteTableId": {
          "Ref": "RouteTable"
        },
        "DestinationCidrBlock": "0.0.0.0/0",
        "GatewayId": {
          "Ref": "InternetGateway"
        }
      }
    },
    "NetworkAcl": {
      "DependsOn": [
        "VPC"
      ],
      "Type": "AWS::EC2::NetworkAcl",
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "bats"
          }
        ]
      }
    },
    "InBoundAllTrafficAclEntry": {
      "DependsOn": [
        "NetworkAcl"
      ],
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        },
        "RuleNumber": "100",
        "Protocol": "-1",
        "RuleAction": "allow",
        "Egress": "false",
        "CidrBlock": "0.0.0.0/0"
      }
    },
    "OutBoundAllTrafficAclEntry": {
      "DependsOn": [
        "NetworkAcl"
      ],
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        },
        "RuleNumber": "100",
        "Protocol": "-1",
        "RuleAction": "allow",
        "Egress": "true",
        "CidrBlock": "0.0.0.0/0"
      }
    },
    "CISecurityGroup": {
      "DependsOn": [
        "VPC"
      ],
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "GroupDescription": "allows local and concourse traffic",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "-1",
            "FromPort": "0",
            "ToPort": "65535",
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "SecurityGroupEgress": [
          {
            "IpProtocol": "-1",
            "FromPort": "0",
            "ToPort": "65535",
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": "ci"
          }
        ]
      }
    },
    "UbuntuSubnet": {
      "DependsOn": [
        "VPC"
      ],
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "CidrBlock": {
          "Fn::FindInMap": [
            "IPConfigurations",
            "UbuntuBATs",
            "CIDR"
          ]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "bats-ubuntu"
          }
        ]
      }
    },
    "UbuntuSubnetRouteTableAssociation": {
      "DependsOn": [
        "UbuntuSubnet",
        "RouteTable"
      ],
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": {
          "Ref": "UbuntuSubnet"
        },
        "RouteTableId": {
          "Ref": "RouteTable"
        }
      }
    },
    "UbuntuSubnetNetworkAclAssociation": {
      "DependsOn": [
        "UbuntuSubnet",
        "NetworkAcl"
      ],
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {
          "Ref": "UbuntuSubnet"
        },
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        }
      }
    },
    "UbuntuDirectorIPAddress": {
      "DependsOn": [
        "AttachGateway"
      ],
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "Domain": "vpc"
      }
    },
    "UbuntuBATSIPAddress": {
      "DependsOn": [
        "AttachGateway"
      ],
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "Domain": "vpc"
      }
    },
    "CentosSubnet": {
      "DependsOn": [
        "VPC"
      ],
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "CidrBlock": {
          "Fn::FindInMap": [
            "IPConfigurations",
            "CentosBATs",
            "CIDR"
          ]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "bats-centos"
          }
        ]
      }
    },
    "CentosSubnetRouteTableAssociation": {
      "DependsOn": [
        "CentosSubnet",
        "RouteTable"
      ],
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": {
          "Ref": "CentosSubnet"
        },
        "RouteTableId": {
          "Ref": "RouteTable"
        }
      }
    },
    "CentosSubnetNetworkAclAssociation": {
      "DependsOn": [
        "CentosSubnet",
        "NetworkAcl"
      ],
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {
          "Ref": "CentosSubnet"
        },
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        }
      }
    },
    "CentosDirectorIPAddress": {
      "DependsOn": [
        "AttachGateway"
      ],
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "Domain": "vpc"
      }
    },
    "CentosBATSIPAddress": {
      "DependsOn": [
        "AttachGateway"
      ],
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "Domain": "vpc"
      }
    },
    "LifecycleSubnet": {
      "DependsOn": [
        "VPC"
      ],
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "CidrBlock": {
          "Fn::FindInMap": [
            "IPConfigurations",
            "Lifecycle",
            "CIDR"
          ]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "lifecycle"
          }
        ]
      }
    },
    "LifecycleSubnetRouteTableAssociation": {
      "DependsOn": [
        "LifecycleSubnet",
        "RouteTable"
      ],
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": {
          "Ref": "LifecycleSubnet"
        },
        "RouteTableId": {
          "Ref": "RouteTable"
        }
      }
    },
    "LifecycleSubnetNetworkAclAssociation": {
      "DependsOn": [
        "LifecycleSubnet",
        "NetworkAcl"
      ],
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {
          "Ref": "LifecycleSubnet"
        },
        "NetworkAclId": {
          "Ref": "NetworkAcl"
        }
      }
    },
    "LifecycleELB": {
      "DependsOn": [
        "LifecycleSubnet",
        "CISecurityGroup"
      ],
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "Listeners": [
          {
            "InstancePort": 80,
            "LoadBalancerPort": 80,
            "Protocol": "HTTP"
          }
        ],
        "LoadBalancerName": "bosh-aws-cpi-lifecycle-elb",
        "SecurityGroups": [
          {
            "Ref": "CISecurityGroup"
          }
        ],
        "Subnets": [
          {
            "Ref": "LifecycleSubnet"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": "bosh-aws-cpi-lifecycle-elb"
          }
        ]
      }
    }
  },
  "Outputs": {
    "VPCID": { "Value": { "Ref": "VPC"}},
    "SecurityGroupID": { "Value": { "Ref": "CISecurityGroup"}},
    "UbuntuDirectorEIP": { "Value": { "Ref": "UbuntuDirectorIPAddress"}},
    "UbuntuBATsEIP": { "Value": { "Ref": "UbuntuBATSIPAddress"}},
    "UbuntuSubnetID": { "Value": { "Ref": "UbuntuSubnet"}},
    "UbuntuAvailabilityZone": { "Value": { "Fn::GetAtt": [ "UbuntuSubnet", "AvailabilityZone"]}},
    "UbuntuCIDR": { "Value": { "Fn::FindInMap": [ "IPConfigurations", "UbuntuBATs", "CIDR"]}},
    "UbuntuGateway": { "Value": { "Fn::FindInMap": [ "IPConfigurations", "UbuntuBATs", "Gateway"]}},
    "UbuntuReservedRange": { "Value": { "Fn::FindInMap": [ "IPConfigurations", "UbuntuBATs", "ReservedRange"]}},
    "UbuntuDirectorStaticIP": { "Value": { "Fn::FindInMap": [ "IPConfigurations", "UbuntuBATs", "DirectorPrivate"]}},
    "UbuntuStaticRange": { "Value": { "Fn::FindInMap": [ "IPConfigurations", "UbuntuBATs", "StaticRange"]}},
    "UbuntuStaticIP1": { "Value": { "Fn::FindInMap": [ "IPConfigurations", "UbuntuBATs", "Static1"]}},
    "UbuntuStaticIP2": { "Value": { "Fn::FindInMap": [ "IPConfigurations", "UbuntuBATs", "Static2"]}},
    "CentosDirectorEIP": { "Value": { "Ref": "CentosDirectorIPAddress"}},
    "CentosBATsEIP": { "Value": { "Ref": "CentosBATSIPAddress"}},
    "CentosSubnetID": { "Value": { "Ref": "CentosSubnet"}},
    "CentosAvailabilityZone": { "Value": { "Fn::GetAtt": [ "CentosSubnet", "AvailabilityZone"]}},
    "CentosCIDR": { "Value": { "Fn::FindInMap": [ "IPConfigurations", "CentosBATs", "CIDR"]}},
    "CentosGateway": { "Value": { "Fn::FindInMap": [ "IPConfigurations", "CentosBATs", "Gateway"]}},
    "CentosReservedRange": { "Value": { "Fn::FindInMap": [ "IPConfigurations", "CentosBATs", "ReservedRange"]}},
    "CentosDirectorStaticIP": { "Value": { "Fn::FindInMap": [ "IPConfigurations", "CentosBATs", "DirectorPrivate"]}},
    "CentosStaticRange": { "Value": { "Fn::FindInMap": [ "IPConfigurations", "CentosBATs", "StaticRange"]}},
    "CentosStaticIP1": { "Value": { "Fn::FindInMap": [ "IPConfigurations", "CentosBATs", "Static1"]}},
    "CentosStaticIP2": { "Value": { "Fn::FindInMap": [ "IPConfigurations", "CentosBATs", "Static2"]}},
    "LifecycleSubnetID": { "Value": { "Ref": "LifecycleSubnet"}},
    "LifecycleAvailabilityZone": { "Value": { "Fn::GetAtt": [ "LifecycleSubnet", "AvailabilityZone"]}},
    "LifecycleELB": { "Value": { "Fn::GetAtt": [ "LifecycleELB", "DNSName"]}},
    "LifecycleManualIP": { "Value": { "Fn::FindInMap": [ "IPConfigurations", "Lifecycle", "ManualIP"]}}
  }
}
